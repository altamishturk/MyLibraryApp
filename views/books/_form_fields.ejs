<div class="form-row">
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" name="title" value='<%= book.title %>'>
    </div>
    <div class="form-item">
        <label for="author">Author</label>
        <select name="author">
            <% authors.forEach(author => { %>
            <% if (author.id === book.author) { %>
            <option value="<%= author.id %> " selected label="<%= author.name %> "></option>
            <% } else{ %>
            <option value="<%= author.id %>" label="<%= author.name %>"></option>
            <% } %>
            <% }) %>
        </select>
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label for="publishDate">Publish Date</label>
        <input type="date" name="publishDate" value="<%= book.publishDate == null ? '': 
        book.publishDate.toISOString().split('T')[0] %>">
    </div>
    <div class="form-item">
        <label for="pageCount">Page Count</label>
        <input type="number" min="1" name="pageCount" value='<%= book.pageCount %>'>
    </div>
</div>
<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label for="Cover">Cover</label>
        <input type="file" name="cover" class="filepond book-cover" id="file">
    </div>
    <div class="form-item">
        <label for="description">Description</label>
        <textarea name="description"><%= book.description %> </textarea>
    </div>
</div>