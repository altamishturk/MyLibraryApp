<h2 class="page-header"><%= book.title %> </h2>
<div class="book-details">
    <div>
        <img src="<%= book.coverImagePath %> " alt="cover" class="book-cover">
        <div class="book-details-btn-grid">
            <a href="/books/<%= book.id %>/edit" class="btn btn-primery">Edit</a>
            <%- include('../partials/deleteForm',{url: `/books/${book.id}`}) %>
            <a href="/authors/<%= book.author.id %>/" class="btn btn-primery book-details-author-button">View Author</a>
        </div>
    </div>
    <div class="book-details-grid">
        <div class="book-details-label">Author:
            <div><%= book.author.name %> </div>
        </div>
        <div class="book-details-label">Publish Date:
            <div><%= book.publishDate.toDateString() %></div>
        </div>
        <div class="book-details-label">Page Count:
            <div><%= book.pageCount %></div>
        </div>
        <div class="book-details-label">Description:
            <div><%= book.description %> </div>
        </div>
    </div>

</div>