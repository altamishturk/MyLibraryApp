<h2 class="page-header">Serech Books</h2>
<form action="/books" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label for="title">Title</label>
            <input type="text" name="title" value="<%= searchOption.title %> ">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label for="">Published After</label>
            <input type="date" name="publishedAfter" value="<%= searchOption.publishedAfter %> ">
        </div>
        <div class="form-item">
            <label for="">Published before</label>
            <input type="date" name="publishedBefore" value="<%= searchOption.publishedBefore %> ">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button type="submit" class="btn btn-primery">Search</button>
    </div>
</form>
<br>
<br>

<%- include('../partials/bookGrid',{books:books , large:true}) %>